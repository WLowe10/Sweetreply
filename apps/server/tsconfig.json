{
	"extends": "@sweetreply/tsconfig/base.json",
	"exclude": ["node_modules", "dist"],
	"include": ["./src"],
	"compilerOptions": {
		"outDir": "./dist",
		"types": ["node"],
		"target": "ESNext",
		"jsx": "react-jsx",
		"module": "CommonJS",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"composite": true,
		"baseUrl": "./src",
		"paths": {
			"@auth/*": ["./auth/*"],
			"@admin/*": ["./admin/*"],
			"@controllers/*": ["./controllers/*"],
			"@email/*": ["./email/*"],
			"@features/*": ["./features/*"],
			"@lib/*": ["./lib/*"],
			"@env": ["./env.ts"]
		}
	}
}
