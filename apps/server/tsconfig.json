{
	"extends": "@sweetreply/tsconfig/base.json",
	"exclude": ["node_modules", "dist"],
	"include": ["./src", "../../packages/bots/src/bots/proxy-is-defined.ts"],
	"compilerOptions": {
		"outDir": "./dist",
		"types": ["node"],
		"target": "ESNext",
		"jsx": "react-jsx",
		"module": "CommonJS",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"composite": true,
		"baseUrl": "./src",
		"paths": {
			"@features/*": ["./features/*"],
			"@lib/*": ["./lib/*"],
			"@env": ["./env.ts"]
		}
	}
}
