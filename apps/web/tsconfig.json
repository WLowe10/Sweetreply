{
	"extends": "@sweetreply/tsconfig/remix.json",
	"references": [{ "path": "../server" }],
	"include": ["src"],
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@server/router": ["../../server/src/router.ts"],
			"@components/*": ["./components/*"],
			"@hooks/*": ["./hooks/*"],
			"@features/*": ["./features/*"],
			"@lib/*": ["./lib/*"],
			"@env": ["./env.ts"]
		}
	}
}
