{
	"extends": "@sweetreply/tsconfig/nextjs.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"composite": false,
		"paths": {
			"@/*": ["./src/*"],
			"@server/router": ["../server/src/router.ts"]
		},
		"typeRoots": ["src/types", "./node_modules/@types"],
		"types": ["node"]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/env.js", "next.config.mjs"],
	"exclude": ["node_modules"],
	"references": [{ "path": "../server" }]
}
