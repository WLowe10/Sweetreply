{
    "extends": "@replyon/tsconfig/nextjs.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "declaration": false,
        "declarationMap": false,
        "module": "NodeNext",
        "baseUrl": "./src",
        "noEmit": true,
        "paths": {
            "@/*": ["./*"],
            "~/*": ["../../server/src/*"],
            "@server/router": ["../../server/src/router.ts"]
        },
        "typeRoots": ["src/types", "./node_modules/@types"],
        "types": ["node"]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules/**/*", "src/generated/**/*"]
}
