{
	"name": "sweetreply",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"type-check": "turbo run type-check",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"clean": "find . -name node_modules -o -name .next -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
		"db:generate": "pnpm --filter @sweetreply/prisma db:generate",
		"db:push": "pnpm --filter @sweetreply/prisma db:push",
		"db:genpush": "pnpm --filter @sweetreply/prisma db:genpush"
	},
	"devDependencies": {
		"@sweetreply/tsconfig": "workspace:*",
		"prettier": "^3.1.1",
		"turbo": "latest"
	},
	"packageManager": "pnpm@8.9.0",
	"engines": {
		"node": ">=18"
	}
}
